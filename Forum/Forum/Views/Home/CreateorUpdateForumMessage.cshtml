@model Forum.Models.EditMessageM
@{
    ViewData["Title"] = "Message";
}

<div class="col-md-4">
    <form asp-action="CreateorUpdateForumMessage">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input name="threadId" value="@Model.ThreadId" hidden />
        <input name="messageId" value="@Model.MessageId" hidden />
        <div class="form-group">
            <input name="Message" class="form-control" value="@Model.Message"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>
</div>